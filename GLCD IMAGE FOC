void‭ short_delay(int time)‬

{‬‭

‭for(int i=0;i<time;i++){‬

‭for(int j=0;j<10;j++);‬

‭}‬

‭}‬

‭void long_delay(int time)‬

‭{‬

‭for(int i=0;i<time;i++){‬

‭for(int j=0;j<5000;j++);‬

‭}‬

‭}‬

‭void lcd_en()‬

‭{‬

