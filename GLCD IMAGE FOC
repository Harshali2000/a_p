‭short_delay(5);‬

‭}‬

‭void lcd_comm(unsigned char ch)‬

‭{‬

IOCLR1=‭ LCD_Port ;‬

IOCLR1=RS;‬‭

‭IOSET1=ch<<shift;‬

‭lcd_en();‬

‭}‬

‭void lcd_data(unsigned char ch)‬

‭{‬

IOCLR1=‭ LCD_Port ;‬

IOSET1=RS;‬‭

‭IOSET1=ch<<shift;‬

‭lcd_en();‬

}‬‭

‭void glcd_display(unsigned char *x){‬

IOCLR1=RS;‬‭

‭IOSET1=CS1;‬

IOCLR1=CS2;‬‭

for(int‭ i=0;i<=7;i++){‬

IOSET1=CS1;‬‭

‭IOCLR1=CS2;‬
 
‭lcd_comm(0xB8|i);‬

‭lcd_comm(0x40);‬

for(int‭ j=0;j<=63;j++){‬

lcd‭_data(x[(i*128)+j]);‬

‭}‬

}‬‭

‭for(int i=0;i<=7;i++){‬

‭IOCLR1=CS1;‬

IOSET1=CS2;‬‭

‭lcd_comm(0xB8|i);‬

‭lcd_comm(0x40);‬

‭for(int j=64;j<=127;j++){‬

‭lcd_data(x[(i*128)+j]);‬

}‬‭

}‬‭

‭}‬

void‭ glcd_init()‬

{‬‭

int‭ i;‬

‭PINSEL0 = 0;‬

PINSEL2‭ = 0;‬

‭IODIR1 = LCD_Port |grest |RS |CS1 |CS2;‬

